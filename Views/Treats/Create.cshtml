@{
  Layout = "_Layout";
}

@model SweetShop.Models.Treat

<h4>Add a new Treat</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId")


    @Html.LabelFor(model => model.BakeDate)
    @Html.TextBoxFor(model => model.BakeDate)

    <input type="submit" value="Add new treat" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all treats", "Index")</p>